

@model Admin
<head>
     <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] MobileBankApp</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> *@
</head>
<body>
    <h3 style="text-align: center ;color :Red;"> @ViewBag.Error</h3>
 
<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue; font-family:cabri; text-align:center; font-size: 90px;">Login Admin Portal</h1>
                    <p class="tagcolor" style="color:mediumblue; font-family:cabri; text-align:center; font-size: 45px;">kindly fill this form to Login.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="LogIn" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                         </div>
                        <div style="color:red; font-family:cabri; text-align:center; font-size: 25px;" class="form-group col-sm-6">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div><br>
                        <div style="color:red; font-family:cabri; text-align:center; font-size: 25px;" class="form-group col-sm-6">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" id="pass" name="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                       </div><br><br>
                        <div>
                        
                               <button style=" font-family:cabri; font-size: 20px;" href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal">Login</button>
                        </div>
                       
                  
                    @* <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div> *@
                </form>
            </div>
        </div>

    </div>
</div>
</body>